<% include ./partials/header.ejs %>
   <div class="w-full min-h-screen bg-zinc-800 text-white px-10 py-5">
      <h1 class="text-2xl">Create a new post</h1>
      <form action="createpost"  method="post" enctype="multipart/form-data">
        <input  class="block w-1/3 px-3 py-2 mt-2 rounded-md" type="file" name="post">
        <input class="block w-1/3 text-black px-3 py-2 mt-2 rounded-md" type="text" placeholder="Title" name="Title">
        <textarea class="block text-black w-1/3 px-3 py-2 mt-2 h-40 rounded-md"  placeholder="Description" name="Description"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-2 rounded-md bg-red-700" type="submit" value="Create Post">
      </form>
   </div>
<% include ./partials/footer.ejs %>